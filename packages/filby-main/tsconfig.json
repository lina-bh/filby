{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "CommonJS",
    "target": "es2022",

    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node10",
    "checkJs": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": ["src/**/*"]
}
