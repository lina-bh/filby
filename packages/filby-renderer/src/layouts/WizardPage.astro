---
import "../styles/style.css";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta
      http-equiv="Content-Security-Policy"
      content="script-src 'self' app:"
    />
  </head>
  <body>
    <header class="wizard-header grey-bg">
      <h1>{title}</h1>
    </header>
    <main class="wizard-main">
      <div class="wizard-main__content">
        <slot />
      </div>
    </main>
    <footer class="wizard-footer grey-bg">
      <slot name="footer" />
    </footer>
  </body>
</html>

<style>
  .wizard-header {
    padding: 0.8rem 1rem;
    border-bottom: 1px solid #000;
  }

  .wizard-main {
    padding: 0.5rem 1rem;
    display: grid;
    grid-template-columns: 3fr 1fr;
    flex: 1;
  }

  .wizard-footer {
    display: flex;
    justify-content: end;
    align-items: center;
    padding: 1.4rem 2rem;
    border-top: 1px solid #000;
    column-gap: 0.5rem;
  }

  .wizard-main__content {
    display: flex;
    flex-direction: column;
    padding: 0.5em 0em;
    row-gap: 0.5em;
  }

  .grey-bg {
    background-color: #f5f5f5;
  }
</style>
